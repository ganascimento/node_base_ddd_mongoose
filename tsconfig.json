{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "types": ["reflect-metadata", "jest", "node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./main.ts",
    "./src"
  ],
  "exclude": [
    "jest.startup.ts",
    "**/*.test.ts"
  ]
}
